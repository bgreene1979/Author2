<Page
    x:Class="Author.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Author"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/butterflys4.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Image x:ConnectionId='1' x:Name="imgLogo" HorizontalAlignment="Left" Source="assets/banner.jpg" Height="100" Margin="15,43,0,0" VerticalAlignment="Top" Width="335"/>
        <HyperlinkButton x:ConnectionId='2' x:Name="hplAbout" Content="About" HorizontalAlignment="Left" Margin="86,171,0,0" VerticalAlignment="Top"                       />
        <HyperlinkButton x:ConnectionId='3' x:Name="hplBooks" Content="Books" HorizontalAlignment="Left" Margin="170,171,0,0" VerticalAlignment="Top"                       />
        <HyperlinkButton x:ConnectionId='4' x:Name="hplContact" Content="Contact" HorizontalAlignment="Left" Margin="247,171,0,0" VerticalAlignment="Top"                         />
        <TextBlock HorizontalAlignment="Left" Margin="213,10,0,0" TextWrapping="Wrap" Text="Welcome: " VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="txtblkUserName" HorizontalAlignment="Left" Margin="303,10,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" FontSize="36"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="58" Margin="15,203,0,0" VerticalAlignment="Top" Width="335">
            <TextBlock TextWrapping="Wrap" Text="News" FontSize="36" Margin="108,1,118,-1" />
        </Border>
        <TextBlock HorizontalAlignment="Left" Margin="10,404,0,0" TextWrapping="Wrap" Text="Spirit of the Forrest is Currently available for purchase. Links can be found on the books section above." VerticalAlignment="Top" Width="340"/>
        <TextBlock HorizontalAlignment="Left" Margin="15,280,0,0" TextWrapping="Wrap" Text="Milicent Dagworth is currently creating the second book in the Spirit series of books. She is working on that in between working and going to college and will have that out as soon as possible" VerticalAlignment="Top"/>

    </Grid>
</Page>

